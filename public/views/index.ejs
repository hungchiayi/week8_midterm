<% layout( 'layout' ) -%>

<h1 id="page-title"><%= title %></h1>
<form action="/create" method="post" accept-charset="utf-8">
<div class="container mb">
    <div class="row">
      <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
          <div class="row">
              <div class="col-lg-2">
                <input type="checkbox" name="post_it_notes" value="green"><img class="img-responsive img-circle" src="../images/green.jpg"><br/>
              </div>
              <div class="col-lg-2">
                <input type="checkbox" name="post_it_notes" value="yellow"><img class="img-responsive img-circle" src="../images/yellow.jpg">
              </div>
              <div class="col-lg-2">
                <input type="checkbox" name="post_it_notes" value="red"><img class="img-responsive img-circle" src="../images/red.jpg">
              </div>
              <div class="col-lg-6">
                <input  class="date1" type ='date' id='date' name = 'date1' />
              </div>
          </div>
          <div class="row">
              <div class="col-lg-8">
                <textarea class="form-control" name="content" placeholder="內容ㄎ" rows="3"></textarea><br/>
                <input class="item-new" type="submit" value="做事!!!"action="/create"><br/>
              </div>
              <div class="col-lg-4">
                <img class="img-responsive" src="../images/oldman.jpg">
              </div>
          </div>
		  </div>
  </div>
</div>
</form>

<div class="container">
  <div class="row mt">
<% todos.forEach( function ( todo ){ %>

  <div class="col-lg-4">
    <img class="colorr img-circle"src="../images/<%= todo.post_it_notes %>.jpg">
    <a class="update-link" href="/edit/<%= todo._id %>" title="Update this todo item"><%= todo.content %></a>
    <a class="del-btn" href="/del/<%= todo._id %>" title="Delete this todo item"></a>
    <p class="date"><%= todo.date1 %></p>
  </div>
<% }); %>
<!-- </div> -->
  </div>
</div>
